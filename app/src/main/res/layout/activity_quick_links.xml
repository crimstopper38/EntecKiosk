<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/img_data_analytics"
    android:padding="16dp">

    <!-- Title with Background Highlight -->
    <TextView
        android:id="@+id/text_quick_links_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Quick Links"
        android:textSize="30sp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:gravity="center"
        android:padding="10dp"
        android:background="#80000000"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp" />


    <!-- Quick Links Buttons & Descriptions -->
    <LinearLayout
        android:id="@+id/quick_links_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_quick_links_title"
        android:layout_above="@id/quick_links_back_button"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="8dp">

        <!-- Libraries and Labs -->
        <Button
            android:id="@+id/button_learning_resources"
            style="@style/QuickLinkButtonStyle"
            android:text="Libraries and Labs" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:background="#80000000"
            android:gravity="center"
            android:padding="10dp"
            android:text="Access books, digital media, and resources to help you succeed academically."
            android:textColor="#FFFFFF"
            android:textSize="16sp" />

        <!-- Campus Services -->
        <Button
            android:id="@+id/button_campus_services"
            style="@style/QuickLinkButtonStyle"
            android:text="Campus Services" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:background="#80000000"
            android:gravity="center"
            android:padding="10dp"
            android:text="Find info on the Quick Copy Center, mailroom, maintenance, and more."
            android:textColor="#FFFFFF"
            android:textSize="16sp" />

        <!-- Bookstore -->
        <Button
            android:id="@+id/button_bookstore"
            style="@style/QuickLinkButtonStyle"
            android:text="Bookstore" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Get textbooks, supplies, and MDC gear."
            android:textSize="16sp"
            android:textColor="#FFFFFF"
            android:background="#80000000"
            android:gravity="center"
            android:padding="10dp"
            android:layout_marginBottom="12dp"/>

        <!-- Dining -->
        <Button
            android:id="@+id/button_dining_services"
            style="@style/QuickLinkButtonStyle"
            android:text="Dining Services" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Find out what's cooking at North Campus."
            android:textSize="16sp"
            android:textColor="#FFFFFF"
            android:background="#80000000"
            android:gravity="center"
            android:padding="10dp"
            android:layout_marginBottom="12dp"/>

        <!-- Financial Aid -->
        <Button
            android:id="@+id/button_financial_aid"
            style="@style/QuickLinkButtonStyle"
            android:text="Financial Aid" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Learn how to apply for financial aid and scholarships."
            android:textSize="16sp"
            android:textColor="#FFFFFF"
            android:background="#80000000"
            android:gravity="center"
            android:padding="10dp"
            android:layout_marginBottom="12dp"/>

        <!-- Fitness Center -->
        <Button
            android:id="@+id/button_fitness_center"
            style="@style/QuickLinkButtonStyle"
            android:text="Aquatic and Fitness Center" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Check out the pool, gym, and membership info."
            android:textSize="16sp"
            android:textColor="#FFFFFF"
            android:background="#80000000"
            android:gravity="center"
            android:padding="10dp"
            android:layout_marginBottom="12dp"/>
    </LinearLayout>

    <!-- Back Button -->
    <Button
        android:id="@+id/quick_links_back_button"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:text="Back"
        android:backgroundTint="#2196F3"
        android:textColor="#FFFFFF"
        android:padding="12dp"
        android:elevation="4dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="16dp"/>
</RelativeLayout>
