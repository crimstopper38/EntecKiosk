<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_campus">

    <!-- Title Bar -->
    <Button
        android:id="@+id/exit_button"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:background="#2196F3"
        android:text="Exit Application"
        android:textSize="25dp"
        android:textColor="#ffffff"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="8dp" />

    <!-- Content Section -->
    <LinearLayout
        android:id="@+id/content_section"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/exit_button"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Welcome to Miami-Dade College \nSchool of Engineering and Technology"
            android:textStyle="bold"
            android:textSize="30sp"
            android:gravity="center"
            android:padding="16dp"
            android:textColor="#ffffff" />

        <Button
            android:id="@+id/general_questions_button"
            android:gravity="center"
            android:layout_width="500dp"
            android:layout_height="wrap_content"
            android:text="General Questions"
            android:padding="25dp"
            android:textSize="30dp"
            android:backgroundTint="#2196F3"
            android:textColor="#FFFFFF"
            android:elevation="4dp"
            android:layout_marginBottom="16dp" />

        <Button
            android:id="@+id/campus_info_button"
            android:layout_width="500dp"
            android:layout_height="wrap_content"
            android:text="Campus Information"
            android:padding="25dp"
            android:textSize="30dp"
            android:backgroundTint="#2196F3"
            android:textColor="#FFFFFF"
            android:elevation="4dp" />
    </LinearLayout>
</RelativeLayout>
